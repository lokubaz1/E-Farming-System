    <div class="table-data">
    <table border="1" >
        <tr>
          <th>Id</th>
            <th>firstname</th>
            <th>lastname</th>
            <th>username</th>
            <th>email</th>
            <th>contact</th>
            <th>city</th>
            <th>address</th>
            
        </tr>
        
        <%
       if(userData.length!=0){
        var i=1;
        userData.forEach(function(userTable) {
          %>

        
        <tr>
            <th scope="row"><%=userTable._id %></th>
            <td><%=userTable.fname %></td>
            <td><%=userTable.lname %></td>
            <td><%=userTable.uname %></td>
            <td><%=userTable.email %></td>
            <td><%=userTable.contact %></td>
            <td><%=userTable.city %></td>
            <td><%=userTable.address %></td>
            <td> <a><button type="submit" id="button" class="postbtn" onclick="myFunction()">Edit</button></a></td>
            <td>
              <a><button type="submit" id="button" class="postbtn" onclick="myFunction()">Delete</button></a>
                
                </td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>


